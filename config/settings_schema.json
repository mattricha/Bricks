  {
    "name": "Logo",
    "settings": [
      {
        "type": "header",
        "content": "Logo"
      },
      {
        "type": "image",
        "id": "logo.png",
        "label": "Custom logo",
        "max-width": 450,
        "max-height": 200,
        "info": "450 x 200px .png"
      },
      {
        "type": "checkbox",
        "id": "logo_use_image",
        "label": "Use custom logo"
      },
      {
        "type": "text",
        "id": "logo_max_width",
        "label": "Max logo width",
        "default": "450",
        "info": "Defined in pixels. Do not add the 'px' unit."
      },
      {
        "type": "header",
        "content": "Icon"
      },
      {
        "type": "image",
        "id": "favicon.png",
        "label": "Custom icon",
        "max-width": 32,
        "max-height": 32,
        "info": "32 x 32px .png required"
      },
      {
        "type": "checkbox",
        "id": "favicon_enable",
        "label": "Use custom icon"
      }
    ]
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "header",
        "content": "General colors"
      },
      {
        "type": "color",
        "id": "color_primary",
        "label": "Primary",
        "default": "#204a80",
        "info": "Used for text links, and primary buttons"
      },
      {
        "type": "color",
        "id": "color_secondary",
